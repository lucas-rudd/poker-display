    "tsoa-serverless": "^1.0.0"
  },
  "devDependencies": {
    "@poker-api-utils/test-utils": "*",
    "@poker-api-utils/webpack": "*",
    "@types/bluebird": "^3.5.26",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.0",
    "bluebird": "^3.5.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^6.1.4",
    "serverless": "^1.41.1",
